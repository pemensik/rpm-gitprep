# gitprep specific
# Here comes the hack
%_gitprep_rpmpatch %{_libexecdir}/gitprep/rpmpatch.git
%_gitprep_rpmfixperms %{_libexecdir}/gitprep/rpmfixperms.git
# original_value from lib 
# is there way to use old %_fixperms value without recursion?
%_gitprep_orig_fixperms %{__chmod} -Rf a+rX,u+w,g-w,o-w
%_gitprep_fixperms %{_gitprep_rpmfixperms} %{_gitprep_orig_fixperms} --git=%{__git} --
%_gitprep__patch %{_gitprep_rpmpatch} --git=%{__git}

# Add to your ~/.rpmmacros:
# %_fixperms %{_gitprep_rpmfixperms}
# %__patch %{_gitprep_rpmpatch}
